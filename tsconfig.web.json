{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./out",
    "composite": true
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/worker/**/*.ts",
    "src/shared/**/*.ts"
  ]
}
